{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id" : "http://www.my-schema.com/review_schema.json",
    "title": "Review",
    "description": "JSON Schema that represents reviewers of a film",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string",
            "description": "path to the JSON Schema to use for the validation of the data structure"
        },
        "reviewers": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uri",
                "default": "/api/users/1"
              },
              "uniqueItems": true,
              "minItems": 1
        }
    }
}