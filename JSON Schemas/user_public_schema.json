{
    "$schema":"http://json-schema.org/draft-07/schema",
    "$id": "user_public_schema.json",
    "title": "User Public",
    "type": "object",
    "properties": {
        "id": {"type": "number"},
        "email": {
            "type": "string",
            "format": "email"
        },
        "name": {"type": "string"},
        "self": {
            "type": "string",
            "format": "uri",
            "default": "/api/users/1"
        }
    },
    "required": ["email", "id", "name"]
}