{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id" : "http://www.my-schema.com/vote_schema.json",
    "title": "Vote",
    "description": "JSON Schema that represents a Draft vote",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string",
            "description": "path to the JSON Schema to use for the validation of the data structure"
        },
        "userId": {
            "type": "string",
            "format": "uri",
            "default": "/api/user/1"
        },
        "vote": {
            "type": "boolean"
        }
    },
    "required": ["userId", "vote"]
}